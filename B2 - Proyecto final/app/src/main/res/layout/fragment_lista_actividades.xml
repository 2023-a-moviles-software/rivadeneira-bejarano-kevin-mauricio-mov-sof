<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Lista.NavigationBar.ListaActividadesFragment">

    <Button
        android:id="@+id/btn_configurar_lista"
        android:layout_width="356dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:background="#A52B2B"
        android:backgroundTint="#A52B2B"
        android:text="Modificar Tratamiento"
        android:textAllCaps="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lv_actividades"
        app:layout_constraintTop_toBottomOf="@+id/btn_agregar_nueva_actividad" />

    <Button
        android:id="@+id/btn_agregar_nueva_actividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A52B2B"
        android:text="AÃ±adir Medicamentos"
        android:textAllCaps="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <ListView
        android:id="@+id/lv_actividades"
        android:layout_width="375dp"
        android:layout_height="368dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="@+id/btn_agregar_nueva_actividad"
        app:layout_constraintTop_toBottomOf="@+id/btn_configurar_lista" />

    <Spinner
        android:id="@+id/sp_filtro"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/sp_filter_off"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_agregar_nueva_actividad"
        app:layout_constraintStart_toEndOf="@+id/btn_agregar_nueva_actividad"
        app:layout_constraintTop_toTopOf="@+id/btn_agregar_nueva_actividad"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_mensajeInicial"
        android:layout_width="302dp"
        android:layout_height="278dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>