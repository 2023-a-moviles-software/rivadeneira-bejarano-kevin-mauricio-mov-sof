<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:foreground="@drawable/border"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿A dónde quieres ir?"

            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000000">
        </TextView>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/filtros"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="55dp"

        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:elevation="0dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingStart="5dp"

            tools:ignore="RtlSymmetry">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <ImageButton
                    android:id="@+id/btn_1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="prueba"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/piscina" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Albercas increíbles" />
            </LinearLayout>

            <!-- Segundo conjunto ImageButton y TextView (duplicado) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <ImageButton
                    android:id="@+id/btn_2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="prueba"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/habitaciones" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habitaciones" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <ImageButton
                    android:id="@+id/btn_3"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="prueba"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/vistas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vista increíble" />
            </LinearLayout>

            <!-- Segundo conjunto ImageButton y TextView (duplicado) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <ImageButton
                    android:id="@+id/btn_4"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="prueba"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/nuevo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nuevo" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_Alojamiento"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_marginTop="190dp" />

    <Button
        android:id="@+id/btn_consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="#353333"
        android:text="Consultare" />


    <FrameLayout
        android:id="@+id/frameLayout2h"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:elevation="18dp"

        android:background="#ffffff"
        android:layout_marginTop="715dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:backgroundTint="#ffffff">

            <ImageButton
                android:id="@+id/image_btn_homeafd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/lupa_selected"
                android:scaleType="fitCenter"
                android:contentDescription="jk" />

            <ImageButton
                android:id="@+id/image_btn_homeshg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/corazon"
                android:scaleType="fitCenter"
                android:contentDescription="jk" />

            <ImageButton
                android:id="@+id/image_btn_homehjg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/airbnb"
                android:scaleType="fitCenter"
                android:contentDescription="jk" />

            <ImageButton
                android:id="@+id/image_btn_homehfhj"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/mensaje"
                android:scaleType="fitCenter"
                android:contentDescription="jk" />

            <ImageButton
                android:id="@+id/image_btn_homejkj"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/user3"
                android:contentDescription="jk"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </FrameLayout>





</FrameLayout>