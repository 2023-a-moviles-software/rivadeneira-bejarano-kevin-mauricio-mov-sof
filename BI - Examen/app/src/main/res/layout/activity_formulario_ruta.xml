<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="FormularioRuta"

    >

    <TextView
        android:id="@+id/textView9"
        android:layout_width="415dp"
        android:layout_height="65dp"
        android:background="#038FFF"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/te_modo_ruta"
        android:layout_width="115dp"
        android:layout_height="40dp"

        android:layout_marginTop="16dp"
        android:text="Modo"
        android:textColor="#F6F1F1"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_avion_ruta"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_avion_ruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:text="Avión"
        android:textColor="#EC2424"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.674"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/te_modo_ruta"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origen"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="165dp" />

        <EditText
            android:id="@+id/tv_origen_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Origen"
            android:inputType="text"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="192dp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="260dp" />

        <EditText
            android:id="@+id/tv_destino_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Destino"
            android:inputType="text"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="398dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="165dp" />

        <EditText
            android:id="@+id/tv_fecha_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="dd-mm-aaaa"
            android:inputType="text"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="192dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="165dp" />

        <EditText
            android:id="@+id/tv_hora_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="00:00"
            android:inputType="text"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="192dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="165dp" />

        <EditText
            android:id="@+id/tv_duracion_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="# min"
            android:inputType="number"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="192dp" />


    </TableLayout>

    <Button
        android:id="@+id/btn_guardar_ruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>